<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFEFEFE"
    >

  <ImageView
      android:id="@+id/col_image"
      android:layout_width="@dimen/xp20.0"
      android:layout_height="@dimen/xp20.0"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/xp4.0"
      android:padding="@dimen/xp2.0"
      />

  <TextView
      android:id="@+id/col_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toStartOf="@+id/col_image"
      android:maxLines="1"
      android:paddingBottom="@dimen/xp1.0"
      android:paddingStart="@dimen/xp4.0"
      android:paddingTop="@dimen/xp1.0"
      android:textColor="@android:color/black"
      android:textSize="14sp"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/col_other"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/col_category"
      android:layout_toStartOf="@+id/col_image"
      android:paddingBottom="@dimen/xp2.0"
      android:paddingEnd="@dimen/xp5.0"
      android:paddingStart="@dimen/xp5.0"
      android:paddingTop="@dimen/xp2.0"
      android:textSize="12sp"
      android:visibility="gone"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/col_category"
      android:layout_toStartOf="@+id/col_image"
      android:orientation="vertical"
      android:paddingBottom="@dimen/xp1.0"
      android:paddingStart="@dimen/xp4.0"
      >
    <TextView
        android:id="@+id/col_producer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/col_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/col_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/col_producer_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        />
  </LinearLayout>

</RelativeLayout>